{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "command": "make",
            "args": [
                "test"
            ],
            "group": "build",
            "label": "Test",
            "presentation": {
                "panel": "shared",
                "clear": false,
                "close": false
            },
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": [
                        "--login",
                        "-c"
                    ]
                },
                "env": {
                    "TEST_FLAGS": "-C ${workspaceFolder} -v -count=1"
                }
            }
        },
        {
            "type": "shell",
            "command": "make",
            "args": [
                "build"
            ],
            "group": "build",
            "label": "Build",
            "presentation": {
                "panel": "shared",
                "clear": false,
                "close": false
            },
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": [
                        "--login",
                        "-c"
                    ]
                },
                "env": {
                    "BUILD_FLAGS": "-C ${workspaceFolder} -v"
                }
            },
            "dependsOn": "Test",
            "dependsOrder": "sequence"
        },
        {
            "type": "shell",
            "command": "make",
            "args": [
                "run"
            ],
            "group": "build",
            "label": "Run",
            "presentation": {
                "panel": "shared",
                "clear": false,
                "close": false
            },
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": [
                        "--login",
                        "-c"
                    ]
                },
                "env": {
                    "RUN_FLAGS": "-C ${workspaceFolder} -v"
                }
            },
            "dependsOn": "Build",
            "dependsOrder": "sequence",
            "runOptions": {
                "instanceLimit": 100
            }
        },
        {
            "label": "Watch: go staticcheck",
            "type": "shell",
            "command": "watchexec",
            "args": [
                "--workdir",
                "${workspaceFolder}",
                "--exts",
                "go",
                "--watch",
                "${workspaceFolder}",
                "--debounce",
                "1s",
                "--on-busy-update",
                "queue",
                "-q",
                "--",
                "bash",
                "${workspaceFolder}/.vscode/scripts/go_staticcheck.sh",
                "${workspaceFolder}"
            ],
            "isBackground": true,
            "problemMatcher": {
                "base": "$go",
                "owner": "watcher-staticcheck",
                "source": "watcher-staticcheck",
                "severity": "info",
                "background": {
                    "beginsPattern": "^__GO_STATICCHECK_BEGIN__$",
                    "endsPattern": "^__GO_STATICCHECK_END__$"
                }
            },
            "runOptions": {
                "runOn": "folderOpen",
                "instanceLimit": 1
            },
            "presentation": {
                "reveal": "never",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false
            }
        },
        {
            "label": "Watch: go build",
            "type": "shell",
            "command": "watchexec",
            "args": [
                "--workdir",
                "${workspaceFolder}",
                "--exts",
                "go,mod,sum",
                "--watch",
                "${workspaceFolder}",
                "--debounce",
                "1s",
                "--on-busy-update",
                "queue",
                "-q",
                "--",
                "bash",
                "${workspaceFolder}/.vscode/scripts/go_build.sh",
                "${workspaceFolder}"
            ],
            "isBackground": true,
            "problemMatcher": {
                "base": "$go",
                "owner": "watcher-build",
                "source": "watcher-build",
                "background": {
                    "beginsPattern": "^__GO_BUILD_BEGIN__$",
                    "endsPattern": "^__GO_BUILD_END__$"
                }
            },
            "runOptions": {
                "runOn": "folderOpen",
                "instanceLimit": 1
            },
            "presentation": {
                "reveal": "never",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false
            }
        }
    ]
}