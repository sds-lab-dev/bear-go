{
    "name": "Bear AI developer in Go",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "..",
        "options": [
            "--pull"
        ]
    },
    "customizations": {
        "vscode": {
            "settings": {
                "debug.allowBreakpointsEverywhere": true,
                "[go]": {
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": "always"
                    }
                }
            },
            "extensions": [
                "github.copilot-chat",
                "golang.go"
            ]
        }
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=consistent",
    "workspaceFolder": "/workspace",
    "mounts": [
        "source=bear-go-persist-volume,target=/persist,type=volume"
    ],
    "remoteUser": "root",
    "containerEnv": {
        "TZ": "Asia/Seoul",
        "IS_SANDBOX": "1",
        "ENABLE_LSP_TOOL": "1",
        "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
        "CLAUDE_CODE_DISABLE_FEEDBACK_SURVEY": "1",
        "CLAUDE_CODE_ADDITIONAL_DIRECTORIES_CLAUDE_MD": "1"
    },
    "initializeCommand": "${localWorkspaceFolder}/.devcontainer/scripts/initialize_script.sh \"${localWorkspaceFolder}\"",
    "postCreateCommand": "${containerWorkspaceFolder}/.devcontainer/scripts/post_create_script.sh \"${containerWorkspaceFolder}\"",
    "postStartCommand": "${containerWorkspaceFolder}/.devcontainer/scripts/post_start_script.sh \"${containerWorkspaceFolder}\""
}