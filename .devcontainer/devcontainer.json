{
    "name": "Bear AI developer in Go for local development",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "..",
        "target": "dev",
        "options": [
            "--pull"
        ],
        "args": {
            "WORKSPACE_ROOT": "${containerWorkspaceFolder}"
        }
    },
    "customizations": {
        "vscode": {
            "settings": {
                "debug.allowBreakpointsEverywhere": true,
                "editor.codeActionsOnSave": {
                    "source.organizeImports": "always"
                }
            },
            "extensions": [
                "github.copilot-chat",
                "golang.go"
            ]
        }
    },
    "workspaceFolder": "/workspace",
    "workspaceMount": "type=volume,source=bear-go-workspace-volume,target=/workspace",
    "mounts": [
        "type=volume,source=bear-go-claude-volume,target=/root/.claude",
        "type=volume,source=bear-go-golang-volume,target=/root/go",
        "type=volume,source=bear-go-golang-build-cache-volume,target=/root/.cache/go-build",
        "type=volume,source=bear-go-golang-config-volume,target=/root/.config/go",
        "type=volume,source=bear-go-persist-volume,target=/root/.persist"
    ],
    "remoteUser": "root",
    "containerEnv": {
        "WORKSPACE_ROOT": "${containerWorkspaceFolder}",
        "TZ": "Asia/Seoul",
        "IS_SANDBOX": "1",
        "ENABLE_LSP_TOOL": "1",
        "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
        "CLAUDE_CODE_DISABLE_FEEDBACK_SURVEY": "1",
        "CLAUDE_CODE_ADDITIONAL_DIRECTORIES_CLAUDE_MD": "1"
    },
    "initializeCommand": "${localWorkspaceFolder}/.devcontainer/scripts/initialize_script.sh \"${containerWorkspaceFolder}\"",
    "postCreateCommand": "${containerWorkspaceFolder}/.devcontainer/scripts/post_create_script.sh \"${containerWorkspaceFolder}\"",
    "postStartCommand": "${containerWorkspaceFolder}/.devcontainer/scripts/post_start_script.sh \"${containerWorkspaceFolder}\""
}
